# =========================================================
# SOLANA PRIVACY TRADING - BACKEND CONFIGURATION
# =========================================================
# Copy this file to .env and fill in your values
# WARNING: Never commit .env files to version control!
# =========================================================

# =========================================================
# REQUIRED - These must be set for the app to work
# =========================================================

# Main Wallet Private Key (Base58 encoded)
# This is your main wallet that holds funds for trading
# Generate with: solana-keygen new --no-outfile
# Export with: cat ~/.config/solana/id.json | jq -r '.' | node -e "const bs58=require('bs58'); console.log(bs58.encode(Buffer.from(JSON.parse(require('fs').readFileSync(0,'utf8')))))"
MAIN_WALLET_PRIVATE_KEY=your_base58_encoded_private_key

# Solana RPC URL
# Options:
#   - Alchemy: https://solana-mainnet.g.alchemy.com/v2/YOUR_KEY
#   - Helius: https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
#   - QuickNode: https://YOUR_ENDPOINT.solana-mainnet.quiknode.pro/YOUR_KEY/
#   - Triton: https://YOUR_PROJECT.rpcpool.com/YOUR_KEY
SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# DFlow API Configuration
# Get credentials from DFlow developer portal: https://dflow.net
DFLOW_API_KEY=your_dflow_api_key
DFLOW_METADATA_API_URL=https://a.prediction-markets-api.dflow.net/api/v1
DFLOW_TRADE_API_URL=https://quote-api.dflow.net/api/v1

# =========================================================
# OPTIONAL - Enhanced features
# =========================================================

# OpenAI API Key (for AI Trading Agent)
# Get from: https://platform.openai.com/api-keys
# Required for: Market analysis, natural language trading, AI suggestions
OPENAI_API_KEY=sk-your_openai_api_key

# OpenAI Model (optional, defaults to gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# =========================================================
# RPC PROVIDERS (pick one for SOLANA_RPC_URL)
# =========================================================

# Alchemy API Key
# Get from: https://www.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_key

# Helius API Key
# Get from: https://www.helius.dev/
HELIUS_API_KEY=your_helius_key

# =========================================================
# PRIVACY CONFIGURATION
# =========================================================

# Privacy Pool Program ID (Privacy Cash mainnet)
# Leave empty to use default production address
PRIVACY_POOL_PROGRAM_ID=

# Privacy Pool Fee (in basis points, 100 = 1%)
PRIVACY_POOL_FEE_BPS=50

# =========================================================
# SERVER CONFIGURATION
# =========================================================

# API Server Port
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Node Environment
NODE_ENV=development

# =========================================================
# TOKEN ADDRESSES (Mainnet)
# =========================================================

# USDC Mint Address (Solana Mainnet)
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# WSOL Mint Address (Wrapped SOL)
WSOL_MINT=So11111111111111111111111111111111111111112

# =========================================================
# LOGGING & DEBUGGING
# =========================================================

# Log Level: debug, info, warn, error
LOG_LEVEL=info

# Enable detailed transaction logging
DEBUG_TRANSACTIONS=false
